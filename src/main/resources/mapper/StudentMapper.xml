<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.julius.jobmanagementsystem.domain.repository.StudentDao">

    <resultMap id="StudentMap" type="Student">
        <id column="stu_id" jdbcType="CHAR" property="stuId"/>
        <result column="stu_name" jdbcType="VARCHAR" property="stuName"/>
        <result column="stu_pwd" jdbcType="VARCHAR" property="stuPwd"/>
    </resultMap>

    <sql id="Base_Column_List">
    stu_id, stu_name, stu_pwd
  </sql>

    <select id="selectByStuId" resultMap="StudentMap">
        SELECT
        <include refid="Base_Column_List"/>
        FROM student
        <where>
            stu_id = #{stuId,jdbcType=CHAR}
            AND delete_flag='1'
        </where>
    </select>

    <select id="selectAllStu" resultMap="StudentMap">
        SELECT
        <include refid="Base_Column_List"/>
        FROM student
        <where>
            AND delete_flag='1'
        </where>
    </select>

    <delete id="deleteByStuId">
    DELETE  FROM student
    WHERE        stu_id = #{stuId,jdbcType=CHAR}
   </delete>

    <delete id="deleteBatch">
        DELETE FROM student
        WHERE stu_id IN
        <foreach item="id" collection="list" open="(" close=")" separator=",">
            #{id}
        </foreach>
    </delete>

    <insert id="insert">
    INSERT INTO student
    (stu_id, stu_name, stu_pwd)
    VALUES
    (#{stuId,jdbcType=CHAR}, #{stuName,jdbcType=VARCHAR}, #{stuPwd,jdbcType=VARCHAR})
  </insert>

    <insert id="insertBatch">
        INSERT INTO student
        (stu_id, stu_name, stu_pwd)
        VALUES
        <foreach collection="list" item="item" index="index" separator=",">
            (#{item.stuId},#{item.stuName},#{item.stuPwd})
        </foreach>

    </insert>

    <insert id="insertSelective">
        INSERT INTO student
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="stuId != null">
                stu_id,
            </if>
            <if test="stuName != null">
                stu_name,
            </if>
            <if test="stuPwd != null">
                stu_pwd,
            </if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="stuId != null">
                #{stuId,jdbcType=CHAR},
            </if>
            <if test="stuName != null">
                #{stuName},
            </if>
            <if test="stuPwd != null">
                #{stuPwd},
            </if>
        </trim>
    </insert>

    <insert id="register">
        INSERT  INTO student(stu_id,stu_name,stu_pwd)
        VALUES  (#{stuId},#{stuName},#{stuPwd})
    </insert>

    <update id="updateByStuIdSelective">
        UPDATE student
        <set>
            <if test="stuName != null">
                stu_name = #{stuName},
            </if>
            <if test="stuPwd != null">
                stu_pwd = #{stuPwd},
            </if>
        </set>
        WHERE stu_id = #{stuId}
    </update>

    <update id="updateByStuId">
      update   student
      SET      stu_name = #{stuName},
               stu_pwd = #{stuPwd}
      WHERE    stu_id = #{stuId}
  </update>
</mapper>